{
  "name": "selenium-test-player",
  "version": "0.0.0",
  "main": "dist/index.js",
  "dependencies": {
    "selenium-webdriver": "^4.0.0-alpha.1",
    "xml2js": "^0.4.19",
    "jsdom":"^11.6.2",
    "@types/jsdom": "^11.0.4",
    "@types/node": "^9.4.7",
    "@types/selenium-webdriver": "^3.0.8",
    "@types/xml2js": "^0.4.2",
    "typescript": "^2.7.2",
    "commander": "^2.15.0",
    "@types/commander": "^2.12.2",
    "lodash.mapvalues": "^4.6.0",
    "@types/lodash.mapvalues": "^4.6.3",
    "lodash.flatten": "^4.4.0",
    "@types/lodash.flatten": "^4.4.3"
  },
  "files": [
    "src",
    "dist"
  ],
  "devDependencies": {
    "jest":"^22.4.2",
    "ts-jest":"^22.4.1",
    "@types/jest":"^22.2.0",
    "selenium-test-player-report-html":"0.0.0"
  },
  "scripts": {
    "prepare":"tsc --pretty",
    "test":"jest"
  },
  "bin":{
    "runTest":"./dist/cli.js"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "test/tsconfig-jest.json"
      }
    }
  }
}